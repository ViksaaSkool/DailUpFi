<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/white_rabbit</item>
        <item name="colorPrimary">@color/colorPrimaryOn</item>
        <item name="colorPrimaryDark">#00ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DailupFiThemeSplash" parent="AppTheme.NoActionBar">

    </style>

    <style name="DailupFiOffTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryOff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOff</item>
        <item name="android:navigationBarColor">@color/colorPrimaryOff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DailupFiOnTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryOn</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOn</item>
        <item name="android:navigationBarColor">@color/colorPrimaryOn</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DailUpFiSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryOn</item>
        <item name="android:thumb">@drawable/switch_on_off</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="colorAccent">@android:color/background_light</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/background_light</item>

    </style>

    <style name="DailUpFiSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ffa000</item>
        <item name="android:textSize">9dp</item>
    </style>

</resources>
